<% include ./partials/header %>

<div class="container">
    <h1 style="text-align:center;">Buy Course :  <strong><%=project.name%></strong> </h1>

    <div class="card-body">
            <hr>
            <div style="max-width: 50%;margin: 25px auto;">
              <div class="form-group ">
                <label >Email : </label>                
                  <%=user.email%>
              </div>
              <div class="form-group ">
                <label >First Name : </label>                
                  <%=user.firstname%>
              </div>
              <div class="form-group ">
                <label >Last Name : </label>                
                  <%=user.lastname%>
              </div>
              <div class="form-group ">
                <label >Contact No. : </label>                
                  <%=user.phone1%>
              </div>
              <div class="form-group ">
                <label >Amount : </label>                
                  <%=project.amount%>
              </div>
              <form action="/payu/projects/<%=project.project_id%>" method="POST">
                  <button type="submit" class="btn btn-lg btn-primary btn-block">Buy Now</button>
                  <a class="btn btn-lg btn-block btn-danger" href="/">Cancel</a>
              </form>
            </div>
    </div>
</div>


<% include ./partials/footer %>