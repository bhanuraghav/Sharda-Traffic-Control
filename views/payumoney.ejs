
<div class="container">
    <h1 style="text-align:center;">PAY CHALLAN NUMBER <strong><%=result.challanNumber%></strong> </h1>

    <div class="card-body">
            <hr>
            <div style="max-width: 50%;margin: 25px auto;">
              <div class="form-group ">
                <label >Email : </label>                
                  <%=user.email%>
              </div>
              <div class="form-group ">
                <label >Name : </label>                
                  <%=user.name%>
              </div>
              <div class="form-group ">
                <label >Contact No. : </label>                
                  <%=user.phone%>
              </div>
              <div class="form-group ">
                <label >Amount : </label>                
                  <%=result.challanAmount%>
              </div>
              <form action="/paychallan/<%=result.challanNumber%>" method="POST">
                  <button type="submit" class="btn btn-lg btn-primary btn-block">PAY NOW</button>
                  <a class="btn btn-lg btn-block btn-danger" href="/">Cancel</a>
              </form>
            </div>
    </div>
</div>

